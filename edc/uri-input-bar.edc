#include "config.edc"
#include "macro.edc"

#define CIRCLE_IMAGE_WIDTH	96
#define CIRCLE_IMAGE_HEIGHT	70

#define CANCEL_IMAGE_SIZE	42

#define URI_INPUT_ENTRY_CANCEL_IMAGE "browser-view/uri-input-bar/I01_toolbar_input_icon_cancel_02.png"

#define URI_INPUT_SEARCH_IMAGE "browser-view/uri-input-bar/I01_URL_toolbar_button.png"
#define URI_INPUT_SEARCH_IMAGE_PRESS "browser-view/uri-input-bar/I01_URL_toolbar_button_press.png"

collections {
// BUTTON_IMAGE_STYLE is defined in macro.edc
// Define BUTTON_IMAGE_STYLE(style_name, image_normal, image_press, image_dim, min_width, min_height)
   sounds {
      sample {
         name: "touch_sound" AS_IS;
         source: "S_Touch_30ms.wav";
      }
   }
BUTTON_IMAGE_STYLE("browser/uri_input_search", URI_INPUT_SEARCH_IMAGE, URI_INPUT_SEARCH_IMAGE_PRESS, URI_INPUT_SEARCH_IMAGE, CIRCLE_IMAGE_WIDTH, CIRCLE_IMAGE_HEIGHT)

BUTTON_IMAGE_STYLE("browser/uri_input_back", URI_INPUT_BACK_IMAGE, URI_INPUT_BACK_PRESS, URI_INPUT_BACK_DIM, BACK_IMAGE_SIZE, BACK_IMAGE_SIZE)

	group {
		name: "uri-input-bar-layout";
		images {
			image: URI_INPUT_BAR_BG COMP;
		}
		parts {
			part { name: "bg";
				mouse_events: 1;
				scale: 1;
				type: IMAGE;
				description {
					state: "default" 0.0;
					visible: 1;
					align: 0.0 0.0;
					fixed: 0 1;
					min: 0 URI_BAR_HEIGHT;
					rel1 { relative: 0.0 0.0; }
					rel2 { relative: 1.0 1.0; }
					image.normal: URI_INPUT_BAR_BG;
				}
			}
			part { name: "pad_cicle_button";
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 0;
					align: 0.0 0.0;
					min: URI_INPUT_BAR_VERTICAL_PADDING_3 0;
					fixed: 1 0;
					rel1 { relative: 0.0 0.0; to: "bg"; }
					rel2 { relative: 0.0 1.0; to: "bg"; }
				}
			}
			part { name: "elm.swallow.entry_layout";
				scale : 1;
				type : SWALLOW;
				description {
					state: "default" 0.0;
					visible: 1;
					align: 0.0 0.5;
					min: 0 URI_ENTRY_LAYOUT_HEIGHT;
					fixed: 1 1;
					rel1 { relative: 0.0 0.0; to: "elm.swallow.circle_button"; }
					rel2 { relative: 0.0 1.0; to: "pad_entry_back_button"; }
				}
			}
			part { name: "elm.swallow.circle_button";
				scale : 1;
				type : SWALLOW;
				description {
					state: "default" 0.0;
					visible: 1;
					align: 0.0 0.5;
					min: 0 0;
					max: 0 0;
					fixed: 1 1;
					rel1 { relative: 1.0 0.0; to: "pad_cicle_button"; }
					rel2 { relative: 1.0 1.0; to: "pad_cicle_button"; }
				}
			}
			part { name: "pad_entry_back_button";
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 0;
					align: 1.0 0.0;
					min: URI_INPUT_BAR_VERTICAL_PADDING_2 0;
					fixed: 1 0;
					rel1 { relative: 0.0 0.0; to: "elm.swallow.back_button"; }
					rel2 { relative: 0.0 1.0; to: "elm.swallow.back_button"; }
				}
			}
			part { name: "elm.swallow.back_button";
				scale : 1;
				type : SWALLOW;
				description {
					state: "default" 0.0;
					visible: 1;
					align: 1.0 0.5;
					min: BACK_IMAGE_SIZE BACK_IMAGE_SIZE;
					max: BACK_IMAGE_SIZE BACK_IMAGE_SIZE;
					fixed: 1 1;
					rel1 { relative: 0.0 0.0; to: "pad_back_button"; }
					rel2 { relative: 0.0 1.0; to: "pad_back_button"; }
				}
			}
			part { name: "pad_back_button";
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 0;
					align: 1.0 0.0;
					min: URI_INPUT_BAR_VERTICAL_PADDING_4 0;
					fixed: 1 0;
					rel1 { relative: 1.0 0.0; to: "bg"; }
					rel2 { relative: 1.0 1.0; to: "bg"; }
				}
			}
		}
	}

	group {
		name: "entry-layout";
		images {
			image: ENTRY_LAYOUT_BG COMP;
			image: URI_INPUT_ENTRY_CANCEL_IMAGE COMP;
		}
		parts {
			part { name: "bg";
				mouse_events: 1;
				scale: 1;
				type: IMAGE;
				description {
					state: "default" 0.0;
					visible: 1;
					align: 0.0 0.0;
					fixed: 1 1;
					min: 0 URI_ENTRY_LAYOUT_HEIGHT;
					rel1 { relative: 0.0 0.0; }
					rel2 { relative: 1.0 1.0; }
					image.normal: ENTRY_LAYOUT_BG;
					image.border: 35 35 35 35;
				}
			}
			part { name: "pad_entry";
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 0;
					align: 0.0 0.0;
					min: CIRCLE_IMAGE_WIDTH 0;
					fixed: 1 0;
					rel1 { relative: 0.0 0.0; to: "bg"; }
					rel2 { relative: 0.0 1.0; to: "bg"; }
				}
			}
			part { name: "pad_text";
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 0;
					align: 0.0 0.0;
					min: 16 0;
					fixed: 1 0;
					rel1 { relative: 1.0 0.0; to: "pad_entry"; }
					rel2 { relative: 1.0 1.0; to: "pad_entry"; }
				}
			}
			part { name: "elm.swallow.entry";
				mouse_events: 1;
				scale : 1;
				type : SWALLOW;
				description {
					state: "default" 0.0;
					visible: 1;
					align: 0.0 0.5;
					min: 0 URI_ENTRY_LAYOUT_HEIGHT;
					fixed: 1 1;
					rel1 { relative: 1.0 0.55; to_x: "pad_text"; to_y: "bg"; }
					rel2 { relative: 0.0 0.55; to_x: "pad_entry_delete"; to_y: "bg"; }
				}
			}
			part { name: "pad_entry_delete";
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 0;
					align: 1.0 0.0;
					min: VERTICAL_PADDING_ENTRY_LAYOUT 0;
					fixed: 1 0;
					rel1 { relative: 0.0 0.0; to: "delete_icon"; }
					rel2 { relative: 0.0 1.0; to: "delete_icon"; }
				}
			}
			part { name: "delete_icon";
				mouse_events: 1;
				scale : 1;
				type : IMAGE;
				description {
					state: "default" 0.0;
					visible: 1;
					align: 1.0 0.5;
					min: RELOAD_ICON_SIZE RELOAD_ICON_SIZE;
					max: RELOAD_ICON_SIZE RELOAD_ICON_SIZE;
					fixed: 1 1;
					rel1 { relative: 0.0 0.0; to_x: "pad_delete_icon"; to_y: "pad_top_delete_icon"; }
					rel2 { relative: 0.0 1.0; to: "pad_delete_icon"; }
					image.normal: URI_INPUT_ENTRY_CANCEL_IMAGE;
				}
			}
			part { name: "pad_top_delete_icon";
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 0;
					align: 0.0 0.0;
					min: 0 2;
					fixed: 0 1;
					rel1 { relative: 0.0 0.0; to: "bg"; }
					rel2 { relative: 1.0 0.0; to: "bg"; }
				}
			}
			part { name: "pad_delete_icon";
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 0;
					align: 1.0 0.0;
					min: VERTICAL_PADDING_ENTRY_LAYOUT 0;
					fixed: 1 0;
					rel1 { relative: 1.0 0.0; to: "bg"; }
					rel2 { relative: 1.0 1.0; to: "bg"; }
				}
			}
			part { name: "delete_icon,touch_area";
				mouse_events: 1;
				repeat_events: 0;
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 1;
					align: 0.0 0.0;
					fixed: 1 1;
					color: 0 0 0 0;
					rel1 { relative: 0 0; to: "delete_icon"; }
					rel2 { relative: 1.0 1.5; to: "delete_icon"; }
				}
			}
		}
	}
}
