		}
	}
	group {
		name: "popup_checkview_layout";
		parts {
			part {
				name: "bg";
				scale: 1;
				type: SPACER;
				description {
					state: "default" 0.0;
					min: POPUP_CHECK_VIEW_LAYOUT_MIN_INC;
					fixed: 1 0;
				}
			}
			part {
				name: "pad_l";
				type: SPACER;
				scale: 1;
				description {
					state: "default" 0.0;
					min: POPUP_CONTENT_DEFAULT_PADDING_LEFT_MIN_INC 0;
					fixed: 1 0;
					rel1.relative: 0.0 0.0;
					rel2.relative: 0.0 1.0;
					align: 0.0 0.0;
				}
			}
			part {
				name: "pad_r";
				type: SPACER;
				scale: 1;
				description {
					state: "default" 0.0;
					min: POPUP_CONTENT_DEFAULT_PADDING_RIGHT_MIN_INC 0;
					fixed: 1 0;
					rel1.relative: 1.0 0.0;
					rel2.relative: 1.0 1.0;
					align: 1.0 0.0;
				}
			}
			part {
				name: "elm.swallow.content";
				type: SWALLOW;
				scale: 1;
				description {
					state: "default" 0.0;
					fixed: 0 1;
					min: POPUP_CHECK_VIEW_LAYOUT_CONTENT_MIN_INC;
					align: 0.5 0.0;
					rel2 {
						relative: 1.0 0.0;
						to: "pad_b";
					}
				}
			}
			part {
				name: "pad_b";
				type: SPACER;
				scale: 1;
				description {
					state: "default" 0.0;
					align: 0.0 1.0;
					min: POPUP_CHECK_VIEW_LAYOUT_BOTTOM_MIN_INC;
					fixed: 0 1;
					rel1.relative: 0.0 1.0;
				}
			}
			part {
				name: "elm.swallow.end";
				type: SWALLOW;
				scale: 0;
				description {
					state: "default" 0.0;
					align: 1.0 0.5;
					min: POPUP_CHECK_VIEW_SWALLOW_END_MIN_INC;
					max: POPUP_CHECK_VIEW_SWALLOW_END_MIN_INC;
					fixed: 1 1;
					rel1 {
						relative: 1.0 0.0;
						to_x: "pad_l";
						to_y: "pad_b";
					}
					rel2 {
						relative: 0.0 1.0;
						to_x: "pad_r";
						to_y: "pad_b";
					}
				}
			}
			part{ name:"elm.text.popup";
				type: TEXT;
				scale : 1;
				description { state: "default" 0.0;
					color: 0 0 0 255;
					text {
						font: "Tizen:style=Medium";
						size: 17;
						align: 0.1 0.5;
					}
					align: 0.0 1.0;
					fixed: 1 1;
					rel1 {
						relative: 1.0 0.0;
						to_x: "pad_l";
						to_y: "elm.swallow.end";
					}
					rel2 {
						relative: 0.0 1.0;
						to: "elm.swallow.end";
					}
				}
			}
		}
	}
	
	group { name: "html_web_notification_ask_popup";
		parts {
			part { name: "bg";
				type: RECT;
				scale : 1;
				description { state: "default" 0.0;
					align: 0.0 0.0;
					min:  0 THREE_LINE_POPUP_HEIGHT;
					visible: 0;
					rel1 { relative: 0.0 0.0; }
					rel2 { relative: 1.0 1.0; }
				}
			}
			part { name: "pad_t";
				type: SPACER;
				scale: 1;
				description { state: "default" 0.0;
					align: 0.0 0.0;
					min: 0 NEVER_ASK_POPUP_TOP_PADDING;
					fixed: 0 1;
					rel1 { relative: 0.0 0.0; to: "bg"; }
					rel2 { relative: 1.0 0.0; to: "bg"; }
				}
			}
			part { name: "pad_b";
				type: SPACER;
				scale: 1;
				description { state: "default" 0.0;
					align: 0.0 1.0;
					min: 0 NEVER_ASK_POPUP_BOTTOM_PADDING;
					fixed: 1 1;
					rel1 { relative: 1.0 1.0; to: "bg"; }
					rel2 { relative: 0.0 1.0; to: "bg"; }
				}
			}
			part { name: "pad_l";
				type: SPACER;
				scale: 1;
				description { state: "default" 0.0;
					align: 0.0 0.0;
					min: NEVER_ASK_POPUP_LEFT_PADDING 0;
					fixed: 1 1;
					rel1 { relative: 0.0 0.0; to: "bg"; }
					rel2 { relative: 0.0 1.0; to: "bg"; }
				}
			}
			part { name: "pad_r";
				type: SPACER;
				scale: 1;
				description { state: "default" 0.0;
					align: 1.0 0.0;
					min: NEVER_ASK_POPUP_RIGHT_PADDING 0;
