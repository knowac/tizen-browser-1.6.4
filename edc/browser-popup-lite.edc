					rel2 { relative: 1.0 1.0; to: "bg"; }
				}
			}
			part{ name:"elm.swallow.checkbox";
				type: SWALLOW;
				scale : 1;
				description { state: "default" 0.0;
					visible: 1;
					align: 0.0 1.0;
					fixed: 1 1;
					rel1 { relative: 1.0 0.0; to_x: "pad_l"; to_y: "pad_b";}
					rel2 { relative: 0.0 0.0; to_x: "pad_r"; to_y: "pad_b";}
				}
			}
			part { name: "pad_checkbox_scroller";
				type: SPACER;
				scale: 1;
				description { state: "default" 0.0;
					align: 0.0 1.0;
					min: 0 NEVER_ASK_POPUP_SPACER_H;
					fixed: 1 1;
					rel1 { relative: 1.0 0.0; to_x: "pad_l"; to_y: "elm.swallow.checkbox";}
					rel2 { relative: 0.0 0.0; to_x: "pad_r"; to_y: "elm.swallow.checkbox";}
				}
			}
			part{ name:"elm.swallow.scroller";
				type: SWALLOW;
				scale : 1;
				description { state: "default" 0.0;
					visible: 1;
					align: 0.0 0.0;
					fixed: 1 1;
					rel1 { relative: 1.0 1.0; to_x: "pad_l"; to_y: "pad_t";}
					rel2 { relative: 0.0 0.0; to_x: "pad_r"; to_y: "pad_checkbox_scroller";}
				}
			}
		}
	}
	
