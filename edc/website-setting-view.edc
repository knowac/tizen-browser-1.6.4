				description {
					state: "default" 0.0;
					visible: 1;
					min: GPS_IMAGE_SIZE GPS_IMAGE_SIZE;
					max: GPS_IMAGE_SIZE GPS_IMAGE_SIZE;
					fixed: 1 1;
					rel1 { relative: 0.0 0.0; to: "bg"; }
					rel2 { relative: 1.0 1.0; to: "bg"; }
					image.normal: STORAGE_ON_BUTTON_IMAGE;
				}
				description { state: "clicked" 0.0;
					inherit: "default" 0.0;
					image.normal: STORAGE_ON_BUTTON_IMAGE_PRESS;
				}
			}
			part { name: "item_icon,touch_area";
				mouse_events: 1;
				repeat_events: 0;
				scale : 1;
				type : RECT;
				description {
					state: "default" 0.0;
					visible: 1;
					align: 0.0 0.0;
					fixed: 1 1;
					color: 0 0 0 0;
					rel1 { relative: 0.0 0.0; to: "elm.icon.image"; }
					rel2 { relative: 1.0 1.0; to: "elm.icon.image"; }
				}
			}
		}
		programs {
			program {
				name: "button_click";
